# ============================================
# Environment Variables Template
# Copy this file to .env and customize
# ============================================

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# SQL Server
SQL_SERVER_HOST=sqlserver
SQL_SERVER_PORT=1433
SA_PASSWORD=YourStrong@Passw0rd123
MSSQL_PID=Developer

# Connection Strings
CONNECTION_STRING_MASTER=Server=sqlserver;Database=MultiTenantMaster;User Id=sa;Password=YourStrong@Passw0rd123;TrustServerCertificate=True;

# JWT Settings
JWT_SECRET_KEY=YourSuperSecretKeyThatIsAtLeast32CharactersLong!
JWT_ISSUER=MultitenantPerDb
JWT_AUDIENCE=MultitenantPerDbClient
JWT_EXPIRY_MINUTES=60

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=YourRedisPassword123

# Seq
SEQ_SERVER_URL=http://seq:5341
SEQ_API_KEY=

# Feature Flags
ENABLE_AUTO_MIGRATION=true
ENABLE_SEED_DATA=true
ENABLE_SWAGGER=true

# Monitoring
HEALTH_CHECK_INTERVAL=30
